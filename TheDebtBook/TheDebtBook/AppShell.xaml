<Shell x:Class="TheDebtBook.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:TheDebtBook.Views"
       Shell.FlyoutBehavior="Disabled"
       Title="TheDebtBook">

    <ShellContent Route="main" ContentTemplate="{DataTemplate views:MainPage}" />
    <ShellContent Route="addDebtor" ContentTemplate="{DataTemplate views:AddDebtorPage}" />
    <ShellContent Route="showDebtors" ContentTemplate="{DataTemplate views:ShowDebtorsPage}" />

</Shell>