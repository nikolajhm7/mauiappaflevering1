<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"             
             xmlns:vm="clr-namespace:TheDebtBook.ViewModels"
             xmlns:m="clr-namespace:TheDebtBook.Models"
             x:Class="TheDebtBook.Views.ShowDebtorsPage"
             x:Name="DebtorsList">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add"
                     Command="{Binding NavigateToAddDebtorCommand}" />
        <ToolbarItem Text="Close"
                     Command="{Binding NavigateToMainPageCommand}" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout>
        <!-- ListView for displaying debtors -->
        <ListView ItemsSource="{Binding Debt}"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}"
                              Detail="{Binding Debt}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>