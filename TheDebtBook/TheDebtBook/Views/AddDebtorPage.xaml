<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"             
             xmlns:vm="clr-namespace:TheDebtBook.ViewModels"
             xmlns:m="clr-namespace:TheDebtBook.Models"
             x:Class="TheDebtBook.Views.AddDebtorPage"
             x:Name="PageAddDebtor">
    <VerticalStackLayout BackgroundColor="#192833">
        <Label Text="Add a new Debtor"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               FontAttributes="Bold"
               TextColor="#e9e9e9"/>
        <StackLayout Padding="20" BackgroundColor="#2a4255" Spacing="10">
            <Entry Placeholder="Name" Text="{Binding Name}" TextColor="White" BackgroundColor="#111a22"/>
            <Entry Placeholder="Debt" Text="{Binding Debt}" TextColor="White" BackgroundColor="#111a22" Keyboard="Numeric" />
            <StackLayout Orientation="Horizontal" Spacing="20" HorizontalOptions="CenterAndExpand">
                <Button Text="Save" Command="{Binding AddDebtorAsyncCommand}" BackgroundColor="#223544" />
                <Button Text="Cancel" Command="{Binding NavigateToMainPageAsyncCommand}" BackgroundColor="#223544"/>
            </StackLayout>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>